<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".ActivityInvestor">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingVertical="7dp"
           android:background="#9F000000"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Investor"
               android:textStyle="bold"
               android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="10dp"
               android:textColor="@color/bg_light"
               android:textSize="25dp"></TextView>




       </RelativeLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Investor Profile"
           android:padding="3dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="5dp"
           android:textSize="16dp"
           android:textStyle="bold"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/green_glow">
       </TextView>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@drawable/shape_line"></View>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="8dp"
           app:cardBackgroundColor="#9F000000"
           android:layout_marginTop="5dp"
           android:elevation="8dp"
           app:cardElevation="8dp"
           app:cardCornerRadius="8dp">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingVertical="10dp"
               android:orientation="vertical">
               <androidx.cardview.widget.CardView
                   android:id="@+id/img_profile"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   app:cardCornerRadius="10dp"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginLeft="10dp">

                   <ImageView
                       android:id="@+id/img_invProfile"
                       android:layout_width="100dp"
                       android:background="#9F000000"
                       android:layout_height="100dp"
                       android:scaleType="fitXY"
                       android:src="@drawable/avatar"></ImageView>

               </androidx.cardview.widget.CardView>
               <TextView
                   android:id="@+id/txt_nameInv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="1dp"
                   android:layout_marginLeft="10dp"
                   android:textColor="@color/green_glow"
                   android:maxWidth="190dp"
                   android:textSize="20dp"
                   android:layout_toRightOf="@+id/img_profile"
                   android:text="Full Name"></TextView>


               <TextView
                   android:id="@+id/txt_balanceInv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/txt_nameInv"
                   android:layout_marginLeft="10dp"
                   android:textColor="@color/green_glow"
                   android:maxWidth="190dp"
                   android:textSize="30dp"
                   android:layout_toRightOf="@+id/img_profile"
                   android:text="Balance"></TextView>

               <TextView
                   android:id="@+id/txt_cnicInv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/txt_balanceInv"
                   android:textColor="@color/bg_light"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="5dp"
                   android:layout_toRightOf="@+id/img_profile"
                   android:text="38403-3030303-7"></TextView>

               <TextView
                   android:id="@+id/txt_numberInv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0300-0000000"
                   android:layout_below="@+id/txt_cnicInv"
                   android:textColor="@color/bg_light"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="3dp"
                   android:layout_toRightOf="@+id/img_profile"></TextView>

               <TextView
                   android:id="@+id/txt_addressInv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Address"
                   android:layout_below="@+id/txt_numberInv"
                   android:textColor="@color/bg_light"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="3dp"
                   android:layout_toRightOf="@+id/img_profile"></TextView>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingVertical="10dp"
                   android:layout_below="@+id/txt_addressInv"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Investor Nominee"
                       android:padding="3dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"
                       android:textSize="16dp"
                       android:textStyle="bold"
                       android:textColor="@color/green_glow">
                   </TextView>
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@drawable/shape_line"></View>

                   <TextView
                       android:id="@+id/nName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="1dp"
                       android:layout_marginLeft="10dp"
                       android:textColor="@color/green_glow"
                       android:maxWidth="190dp"
                       android:textSize="20dp"
                       android:text="Nominee Full Name"></TextView>

                   <TextView
                       android:id="@+id/nCnic"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/txt_balance"
                       android:textColor="@color/bg_light"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"
                       android:layout_toRightOf="@+id/img_profile"
                       android:text="38403-3030303-7"></TextView>

                   <TextView
                       android:id="@+id/nPhone"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0300-0000000"
                       android:layout_below="@+id/txt_cnic"
                       android:textColor="@color/bg_light"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="3dp"
                       android:layout_toRightOf="@+id/img_profile"></TextView>

                   <TextView
                       android:id="@+id/nAddress"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Address"
                       android:layout_below="@+id/txt_number"
                       android:textColor="@color/bg_light"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="3dp"
                       android:layout_toRightOf="@+id/img_profile"></TextView>


               </LinearLayout>

           </RelativeLayout>


       </androidx.cardview.widget.CardView>


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Add/Deduct Profit"
           android:padding="3dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="5dp"
           android:textSize="16dp"
           android:textStyle="bold"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/green_glow">
       </TextView>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@drawable/shape_line"></View>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="8dp"
           app:cardBackgroundColor="#9F000000"
           android:layout_marginTop="5dp"
           android:elevation="8dp"
           app:cardElevation="8dp"
           app:cardCornerRadius="8dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingVertical="10dp"
               android:orientation="vertical">


               <EditText
                   android:id="@+id/edit_profit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:inputType="number"
                   android:foregroundTint="@color/bg_light"
                   android:textColorHint="@color/bg_color"
                   android:textColor="@color/bg_light"
                   android:layout_marginHorizontal="15dp"
                   android:minHeight="55dp"
                   android:paddingStart="15dp"
                   android:paddingEnd="15dp"
                   android:background="@drawable/card_shadow"
                   android:hint="Profit/Tax"></EditText>


               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="7dp"
                   android:layout_marginTop="5sp"
                   android:orientation="horizontal">

                   <Button
                       android:id="@+id/btn_profitAdd"
                       android:layout_width="160dp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:elevation="16dp"
                       android:layout_alignParentRight="true"
                       android:textColor="@color/white"
                       android:layout_marginHorizontal="20dp"
                       android:background="@drawable/shape_btn"
                       android:layout_gravity="right"
                       android:drawableTint="@color/green_glow"
                       android:drawableRight="@drawable/ic_baseline_double_arrow_24"
                       android:text="Add Profit"></Button>


                   <Button
                       android:id="@+id/btn_profitdeduct"
                       android:layout_width="160dp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:elevation="16dp"
                       android:layout_alignParentLeft="true"
                       android:textColor="@color/white"
                       android:layout_marginHorizontal="20dp"
                       android:background="@drawable/shape_btn"
                       android:text="Deduct"></Button>

               </RelativeLayout>

               <Button
                   android:id="@+id/btn_profitHistory"
                   android:layout_width="160dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:elevation="16dp"
                   android:layout_alignParentLeft="true"
                   android:textColor="@color/white"
                   android:layout_marginHorizontal="20dp"
                   android:background="@drawable/shape_btn"
                   android:drawableLeft="@drawable/ic_baseline_history_24"
                   android:text="History"></Button>


           </LinearLayout>


       </androidx.cardview.widget.CardView>


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Update Sum-covered"
           android:padding="3dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="5dp"
           android:textSize="16dp"
           android:textStyle="bold"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/green_glow">
       </TextView>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@drawable/shape_line"></View>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="8dp"
           app:cardBackgroundColor="#9F000000"
           android:layout_marginTop="5dp"
           android:elevation="8dp"
           app:cardElevation="8dp"
           app:cardCornerRadius="8dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingVertical="10dp"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginLeft="5sp"
                   android:layout_marginBottom="5sp"
                   android:textColor="@color/bg_light"
                   android:text="Current Sum Covered :">
               </TextView>



               <TextView
                   android:id="@+id/txt_balanceSC"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/txt_nameInv"
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center_horizontal"
                   android:textColor="@color/green_glow"
                   android:maxWidth="190dp"
                   android:textSize="30dp"
                   android:layout_toRightOf="@+id/img_profile"
                   android:text="300 Rs"></TextView>

               <EditText
                   android:id="@+id/edit_updateSC"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:inputType="number"
                   android:foregroundTint="@color/bg_light"
                   android:textColorHint="@color/bg_color"
                   android:textColor="@color/bg_light"
                   android:layout_marginHorizontal="15dp"
                   android:minHeight="55dp"
                   android:paddingStart="15dp"
                   android:paddingEnd="15dp"
                   android:background="@drawable/card_shadow"
                   android:hint="New Sum-Covered"></EditText>


               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="7dp"
                   android:layout_marginTop="5sp"
                   android:orientation="horizontal">

                   <Button
                       android:id="@+id/btn_updateSC"
                       android:layout_width="160dp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:elevation="16dp"
                       android:layout_alignParentRight="true"
                       android:textColor="@color/white"
                       android:layout_marginHorizontal="20dp"
                       android:background="@drawable/shape_btn"
                       android:layout_gravity="right"
                       android:drawableTint="@color/green_glow"
                       android:drawableRight="@drawable/ic_baseline_double_arrow_24"
                       android:text="Update"></Button>

               </RelativeLayout>



           </LinearLayout>


       </androidx.cardview.widget.CardView>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Update EFU Takaful"
           android:padding="3dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="5dp"
           android:textSize="16dp"
           android:textStyle="bold"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/green_glow">
       </TextView>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@drawable/shape_line"></View>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="8dp"
           app:cardBackgroundColor="#9F000000"
           android:layout_marginTop="5dp"
           android:elevation="8dp"
           app:cardElevation="8dp"
           app:cardCornerRadius="8dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingVertical="10dp"
               android:orientation="vertical">


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginLeft="5sp"
                   android:layout_marginBottom="5sp"
                   android:textColor="@color/bg_light"
                   android:text="Current EFU Takaful :">
               </TextView>

               <TextView
                   android:id="@+id/txt_balanceEFU"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/txt_nameInv"
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center_horizontal"
                   android:textColor="@color/green_glow"
                   android:maxWidth="190dp"
                   android:textSize="30dp"
                   android:layout_toRightOf="@+id/img_profile"
                   android:text="300 Rs"></TextView>


               <EditText
                   android:id="@+id/edit_updateEFU"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:inputType="number"
                   android:foregroundTint="@color/bg_light"
                   android:textColorHint="@color/bg_color"
                   android:textColor="@color/bg_light"
                   android:layout_marginHorizontal="15dp"
                   android:minHeight="55dp"
                   android:paddingStart="15dp"
                   android:paddingEnd="15dp"
                   android:background="@drawable/card_shadow"
                   android:hint="New EFU Takaful"></EditText>


               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="7dp"
                   android:layout_marginTop="5sp"
                   android:orientation="horizontal">

                   <Button
                       android:id="@+id/btn_updateEFU"
                       android:layout_width="160dp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:elevation="16dp"
                       android:layout_alignParentRight="true"
                       android:textColor="@color/white"
                       android:layout_marginHorizontal="20dp"
                       android:background="@drawable/shape_btn"
                       android:layout_gravity="right"
                       android:drawableTint="@color/green_glow"
                       android:drawableRight="@drawable/ic_baseline_double_arrow_24"
                       android:text="Update"></Button>

               </RelativeLayout>



           </LinearLayout>


       </androidx.cardview.widget.CardView>


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Send Notifications"
           android:padding="3dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="5dp"
           android:textSize="16dp"
           android:textStyle="bold"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/green_glow">
       </TextView>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@drawable/shape_line"></View>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="8dp"
           app:cardBackgroundColor="#9F000000"
           android:layout_marginTop="5dp"
           android:elevation="8dp"
           android:layout_marginBottom="10dp"
           app:cardElevation="8dp"
           app:cardCornerRadius="8dp">
           <LinearLayout
               android:id="@+id/lout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingVertical="10dp"
               android:orientation="vertical">

               <EditText
                   android:id="@+id/edit_notiHead"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:maxLength="15"
                   android:foregroundTint="@color/bg_light"
                   android:textColorHint="@color/bg_color"
                   android:textColor="@color/bg_light"
                   android:layout_marginHorizontal="15dp"
                   android:minHeight="55dp"
                   android:paddingStart="15dp"
                   android:paddingEnd="15dp"
                   android:background="@drawable/card_shadow"
                   android:hint="Add Tittle"></EditText>

               <EditText
                   android:id="@+id/edit_notiBody"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="15dp"
                   android:minHeight="95dp"
                   android:paddingTop="7sp"
                   android:foregroundTint="@color/bg_light"
                   android:textColorHint="@color/bg_color"
                   android:textColor="@color/bg_light"
                   android:paddingBottom="10dp"
                   android:paddingStart="15dp"
                   android:gravity="top"
                   android:paddingEnd="7dp"
                   android:background="@drawable/card_shadow"
                   android:layout_marginTop="5dp"
                   android:hint="Add Notification"></EditText>

               <Button
                   android:id="@+id/btn_sendNoti"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:elevation="16dp"
                   android:textColor="@color/white"
                   android:layout_marginHorizontal="20dp"
                   android:background="@drawable/shape_btn"
                   android:layout_gravity="right"
                   android:drawableTint="@color/green_glow"
                   android:drawableRight="@drawable/ic_baseline_double_arrow_24"
                   android:text="  Send "></Button>




           </LinearLayout>


       </androidx.cardview.widget.CardView>



   </LinearLayout>

</ScrollView>