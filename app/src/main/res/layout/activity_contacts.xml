<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".ActivityNotification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="7dp"
            android:background="#9F000000"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/bg_light"
                android:textSize="25dp"></TextView>




        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="#9F000000"
            android:layout_marginTop="20dp"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+92"
                        android:layout_marginLeft="15dp"
                        android:textSize="30dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/bg_light"></TextView>
                    <EditText
                        android:drawableRight="@drawable/whatsapp"
                        android:id="@+id/edit_wNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="10"
                        android:inputType="phone"
                        android:foregroundTint="@color/bg_light"
                        android:textColorHint="@color/bg_color"
                        android:textColor="@color/bg_light"
                        android:layout_marginRight="15dp"
                        android:minHeight="55dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:background="@drawable/card_shadow"
                        android:hint="306XXXX00X"></EditText>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+92"
                        android:layout_marginLeft="15dp"
                        android:textSize="30dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/bg_light"></TextView>

                    <EditText
                        android:id="@+id/edit_cNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/card_shadow"
                        android:drawableRight="@drawable/telephone"
                        android:foregroundTint="@color/bg_light"
                        android:hint="306XXXX00X"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:minHeight="55dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:textColor="@color/bg_light"
                        android:textColorHint="@color/bg_color"></EditText>
                </LinearLayout>

                <EditText
                    android:id="@+id/edit_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:inputType="textEmailAddress"
                    android:foregroundTint="@color/bg_light"
                    android:textColorHint="@color/bg_color"
                    android:textColor="@color/bg_light"
                    android:layout_marginHorizontal="15dp"
                    android:minHeight="55dp"
                    android:drawableRight="@drawable/gmail"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/card_shadow"
                    android:hint="Email Address"></EditText>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cUpdate"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:elevation="16dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/shape_btn"
                        android:layout_gravity="right"
                        android:drawableTint="@color/green_glow"
                        android:drawableRight="@drawable/ic_baseline_double_arrow_24"
                        android:text="Update"></Button>

                    <Button
                        android:id="@+id/btn_cClear"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:elevation="16dp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/shape_btn"
                        android:drawableLeft="@drawable/ic_baseline_delete_24"
                        android:text="Clear"></Button>
                </RelativeLayout>




            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>




</ScrollView>