<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityWithdrawDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:background="#9F000000"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invest Request"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/bg_light"
                android:textSize="25dp"></TextView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="#9F000000"
            android:layout_marginTop="5dp"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:id="@+id/layout_Claimed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/iName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bg_light"
                            android:textSize="16dp"
                            android:text="Investor"></TextView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shape_line">
                        </View>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_date_withdraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATE AND TIME"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp"
                        android:textColor="@color/bg_light"
                        android:layout_alignParentRight="true"></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:id="@+id/img_invProfile"
                            android:layout_width="100dp"
                            android:background="#9F000000"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/avatar"></ImageView>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txt_investorName"
                        android:layout_toRightOf="@+id/img_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_glow"
                        android:layout_marginTop="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:text="Name">
                    </TextView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_investorName"
                        android:layout_toRightOf="@+id/img_profile"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10sp"
                                android:text="User total Balance :"
                                android:textColor="@color/bg_light"></TextView>

                            <TextView
                                android:id="@+id/txt_totalbalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300"
                                android:textColor="@color/green_glow"
                                android:textSize="22dp"
                                android:textStyle="bold"></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs"
                                android:textColor="@color/green_glow"
                                android:textSize="18dp"
                                android:layout_marginLeft="3dp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10sp"
                                android:text="Withdraw amount :"
                                android:textColor="@color/bg_light"></TextView>

                            <TextView
                                android:id="@+id/txt_wdbalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300"
                                android:textColor="@color/green_glow"
                                android:textSize="22dp"
                                android:textStyle="bold"></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs"
                                android:textColor="@color/green_glow"
                                android:textSize="18dp"
                                android:layout_marginLeft="3dp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10sp"
                                android:text="withdraw to :"
                                android:textColor="@color/bg_light"></TextView>

                            <TextView
                                android:id="@+id/txt_wdAccount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00162984939503"
                                android:textColor="@color/green_glow"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"

                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bg_light"
                            android:textSize="18dp"
                            android:gravity="center_horizontal"
                            android:text="Amount sent by"></TextView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/shape_line">
                        </View>


                    </LinearLayout>
                </RelativeLayout>




                <EditText
                    android:id="@+id/edit_sndrAccTittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLength="15"
                    android:foregroundTint="@color/bg_light"
                    android:textColorHint="@color/bg_color"
                    android:textColor="@color/bg_light"
                    android:layout_marginHorizontal="15dp"
                    android:minHeight="55dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/card_shadow"
                    android:hint="Sender Account Tittle"></EditText>
                <EditText
                    android:id="@+id/edit_sndrAccNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLength="15"
                    android:inputType="number"
                    android:foregroundTint="@color/bg_light"
                    android:textColorHint="@color/bg_color"
                    android:textColor="@color/bg_light"
                    android:layout_marginHorizontal="15dp"
                    android:minHeight="55dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/card_shadow"
                    android:hint="Sender Account Number"></EditText>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_wdProceed"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:elevation="16dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/shape_btn"
                        android:layout_gravity="right"
                        android:drawableTint="@color/green_glow"
                        android:drawableRight="@drawable/ic_baseline_double_arrow_24"
                        android:text="Proceed"></Button>


                    <Button
                        android:id="@+id/btn_wdDelete"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:elevation="16dp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/shape_btn"
                        android:drawableLeft="@drawable/ic_baseline_delete_24"
                        android:text="Delete"></Button>
                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>





</ScrollView>