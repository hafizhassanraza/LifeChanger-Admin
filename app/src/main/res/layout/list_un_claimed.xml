<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        app:cardBackgroundColor="#9F000000"
        android:layout_marginTop="8dp"
        android:elevation="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:id="@+id/layout_Claimed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9F000000"
            android:layout_marginVertical="3dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bg_light"
                        android:textSize="16dp"
                        android:text="Profit Added"></TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/shape_line">
                    </View>


                </LinearLayout>
                <TextView
                    android:id="@+id/txt_date_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATE AND TIME"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/bg_light"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:textColor="@color/bg_color"
                android:layout_gravity="center_horizontal"
                android:text="After kjasjkjajd claiming this, amount will be added to your balance">
            </TextView>


            <Button
                android:visibility="gone"
                android:id="@+id/btn_claim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="7dp"
                android:background="@drawable/shape_btn"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:text="Got it"></Button>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>